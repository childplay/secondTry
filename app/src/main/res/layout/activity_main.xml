<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/farm"
    android:weightSum="1">


    <ImageButton
        android:contentDescription="@string/first_button"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id="@+id/firstButton"
        android:layout_gravity="start|top"
        android:layout_weight="0.16"
        />

    <ImageButton
        android:contentDescription="@string/second_button"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id="@+id/secondButton"
        android:layout_gravity="start|top"
        android:layout_weight="0.16"
        android:background="@drawable/pig"/>

    <ImageButton
        android:contentDescription="@string/third_button"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id="@+id/thirdButton"
        android:layout_gravity="start|top"
        android:layout_weight="0.16"
        android:background="@drawable/cow"/>

    <ImageButton
        android:contentDescription="@string/forth_button"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id="@+id/forthButton"
        android:layout_gravity="start|top"
        android:layout_weight="0.16"
        android:background="@drawable/chicken"/>

</LinearLayout>
